<div class="container">
    <div class="row p-4">
        <div class="col-sm-9 col-md-7 col-lg-5 mx-auto ">
            <div class="card border-0 shadow rounded-4  py-4">
                <div class="card-body p-4 p-sm-5 rounded-3">
                    <h5 class="card-title text-center mb-5 fw-light fs-5">Reset Password</h5>
                    <form action="/users/reset-password-action/<%= token%>" method="POST">

                        <div class="form-floating mb-3">
                            <input type="password" name="password" class="form-control" id="floatingPassword"
                                placeholder="Password" Required>
                            <label for="floatingPassword">Password</label>
                        </div>
                        <div class="form-floating mb-3" Required>
                            <input type="password" name="confirm_password" class="form-control" id="floatingPassword"
                                placeholder="Password">
                            <label for="floatingPassword">Confirm Password</label>
                        </div>


                        <div class="d-grid">
                            <button class="btn btn-primary btn-login text-uppercase fw-bold" type="submit">Sign
                                UP</button>
                        </div>
                        <hr class="my-4">

                        <div class="d-grid">

                            <div class="g-recaptcha mt-4 mx-auto"
                                data-sitekey="6LeHvDkhAAAAAIpjwCIBS3gv03j701Mq5xGrom0J">
                            </div>
                        </div>


                    </form>
                </div>
            </div>
        </div>
    </div>
</div>